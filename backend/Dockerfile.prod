# Stage 1: Build
FROM golang:1.24-alpine AS builder
WORKDIR /app
# Copy module files first (best practice for caching)
COPY go.mod go.sum ./
RUN go mod download
# Copy the rest
COPY . .
# FIX: CGO_ENABLED=0 ensures it runs perfectly in Alpine
RUN CGO_ENABLED=0 GOOS=linux go build -o main .

# Stage 2: Run
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/main .
EXPOSE 8080
CMD ["./main"]